// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Companies {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  url String
  attendants Attendants[]
  company_sessions CompanySessions[]

  @@map("companies")
}

model CompanySessions {
  id Int @id @default(autoincrement())
  token String @unique
  user Companies @relation(fields: [userId], references: [id])
  userId Int @unique

  @@map("company_sessions")
}

model Attendants {
  id Int @id @default(autoincrement())
  name String @unique
  password String
  company Companies @relation(fields: [companyId], references: [id])
  companyId Int
  attendant_sessions AttendantSessions[]

  @@map("attendants")
}

model AttendantSessions {
  id Int @id @default(autoincrement())
  token String @unique
  user Attendants @relation(fields: [userId], references: [id])
  userId Int @unique

  @@map("attendant_sessions")
}